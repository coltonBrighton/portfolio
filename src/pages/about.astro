---
import Navbar from "../components/Navbar.astro";

const pageTitle = "About Me";

const identity = {
  firstName: "Colton",
  country: "USA",
  occupation: "aspiring developer",
  hobbies: ["gaming", "hiking", "learning instruments"],
};

const skills = [
  "HTML",
  "CSS",
  "Java",
  "TypeScript",
  "React",
  "SpringBoot",
  "Astro",
  "Tailwind CSS",
  "Node.js",
  "JavaScript"
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content="Astro" />
    <title>{pageTitle}</title>
  </head>

  <body class="bg-gray-900 text-white font-sans">
    <Navbar />

    <main class="max-w-3xl mx-auto px-6 py-16 space-y-10">
      <section class="text-center">
        <h1 class="text-4xl font-bold tracking-tight">{pageTitle}</h1>
        <p class="mt-4 text-lg text-gray-300">
          My name is <span class="font-semibold">{identity.firstName} Brighton</span>. Iâ€™m an {identity.occupation} based in the {identity.country}.
        </p>
      </section>

      <section>
        <h2 class="text-2xl font-semibold mb-4">A few facts about me</h2>
        <ul class="list-disc list-inside space-y-2 text-gray-200">
          <li>I live in the {identity.country} and work as an {identity.occupation}.</li>
          {identity.hobbies.length >= 2 && (
            <li>
              Two of my hobbies are: <span class="font-medium">{identity.hobbies[0]}</span> and <span class="font-medium">{identity.hobbies[1]}</span>.
            </li>
          )}
        </ul>
      </section>

      <section>
        <h2 class="text-2xl font-semibold mb-4">Skills</h2>
        <ul class="grid grid-cols-2 sm:grid-cols-3 gap-3 text-gray-100">
          {skills.map((skill) => (
            <li class="bg-gray-800 px-4 py-2 rounded-4xl text-center shadow-sm hover:bg-gray-700 transition">{skill}</li>
          ))}
        </ul>
      </section>
    </main>
  </body>
</html>
